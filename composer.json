{
    "description": "Add SVG processing capabilities to Neos via contao/imagine-svg",
    "type": "neos-package",
    "name": "sitegeist/kaleidoscope-svg",
    "license": "GPL-3.0-or-later",
    "require": {
        "contao/imagine-svg": "^1.0.0",
        "neos/media": "^8.3 || ^9.0",
        "php": "^8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "fix:style": "phpcbf --colors --standard=PSR12 Classes",
        "fix": ["composer install", "composer fix:style"],
        "test:style": "phpcs --colors -n --standard=PSR12 Classes",
        "test:stan": "phpstan analyse Classes -v -c phpstan.neon",
        "test": ["composer install", "composer test:style" , "composer test:stan"]
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\Kaleidoscope\\Svg\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Sitegeist.Kaleidoscope.Svg"
        }
    },
    "config": {
        "allow-plugins": {
            "neos/composer-plugin": true
        }
    }
}
